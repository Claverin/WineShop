@model IEnumerable<WineShop.Models.Manufacturer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manufacturer List</h2>
        </div>
        <div class="col-6" style="text-align:right;">
            <a asp-controller="Manufacturer" asp-action="Create" class="btn btn-primary">
                Add New Manufacturer
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Manufacturer Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var manufacturer in Model)
                {
                <tr>
                    <td width="8%">@manufacturer.ID_Manufacturer</td>
                    <td width="75%">@manufacturer.Name</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a asp-controller="Manufacturer" asp-route-Id="@manufacturer.ID_Manufacturer" asp-action="Edit" class="btn btn-primary mx-1">
                                <i class="fas fa-edit">Edit</i>  
                            </a>
                            <a asp-controller="Manufacturer" asp-route-Id="@manufacturer.ID_Manufacturer" asp-action="Delete" class="btn btn-danger mx-1">
                                <i class="far fa-trash-alt">Delete</i> 
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Manufacturer exists.</p>
    }
</div>