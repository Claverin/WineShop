@model IEnumerable<WineShop.Models.Manufacturer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manufacturer list.</h2>
        </div>
        <div class="col-6">
            Add new Manufacturer to list.
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 1)
        {
          <table class="table table-bordered table-striped" style="width:100%">
              <thead>
                  <tr>
                      <th>Catergory Name</th>
                      <th>Display Order</th>
                  </tr>
              </thead>
              <tbody>
                  @foreach (var item in Model)
                    {
                        <tr>
                            <td width=30%>@item.ID_Manufacturer</td>
                            <td width=50%>@item.Name</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No Manufacturer exist.</p>
        }
    </div>