@model WineShop.Models.ViewModels.ProductVM

<form method="post" asp-action="DeleteConfirm">
    <input asp-for="Product.Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.YearOfProduction"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.YearOfProduction" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.Description"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Product.Description" disabled class="form-control"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.IdManufacturer"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.IdManufacturer" asp-items="@Model.ManufacturerSelectList" disabled class="form-control"></select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Product.IdProductType"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Product.IdProductType" asp-items="@Model.ProductTypeSelectList" disabled class="form-control"></select>
                        <span asp-validation-for="Product.IdProductType" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4 ">
                <img src="@WC.ImageProductPath@Model.Product.Image" class="w-100" style="border-radius:5px; border:1px solid #bbb" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}