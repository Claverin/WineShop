@model WineShop.Models.Shipment

<form method="post" asp-action="DeletePost">
    <input hidden type="number" value=@Model.Id name="id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3 mb-5">Delete Shipment</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 mb-2">
                        <label asp-for="Id"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Id" disabled class="form-control" />
                    </div>
                    <div class="col-4 mb-2">
                        <label asp-for="SendDate"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="SendDate" disabled class="form-control" />
                    </div>
                    <div class="col-4 mb-2">
                        <label asp-for="DeliverDate"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="DeliverDate" disabled class="form-control" />
                    </div>
                    <div class="col-4 mb-2">
                        <label asp-for="Details"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="Details" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}