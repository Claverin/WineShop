@model WineShop.Models.Shipment

<form method="post">
    <input asp-for="Id" hidden />
    <input asp-for="SendDate" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3 mb-5">Edit Shipment</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 mb-2">
                        <label asp-for="SendDate"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="SendDate" class="form-control" disabled/>
                    </div>
                    <div class="col-4 mb-2">
                        <label asp-for="DeliverDate"></label>
                    </div>
                    <div class="col-8 mb-2">
                        <input asp-for="DeliverDate" class="form-control" />
                        <span asp-validation-for="DeliverDate" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Details"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Details" class="form-control" />
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}